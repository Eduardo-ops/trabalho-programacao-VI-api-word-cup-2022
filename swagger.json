{
    "swagger": "2.0",
    "info": {
        "description": "API for the World Cup 2022",
        "version": "1.0.0",
        "title": "API World Cup 2022"
    },
    "basePath": "/v1",
    "tags": [
        {
            "name": "teams",
            "description": "Full crud for teams"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/teams": {
            "post": {
                "tags": [
                    "teams"
                ],
                "summary": "Register a new team",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Team object that needs to be registered",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Team"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Team registered"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            },
            "get": {
                "tags": [
                    "teams"
                ],
                "summary": "List all teams",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Return all teams"
                    }
                }
            }
        },
        "/teams/{id}": {
            "put": {
                "tags": [
                    "teams"
                ],
                "summary": "Update team",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "description": "Change teams informations",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Team"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "type": "integer",
                        "description": "Id of the team the we to be update",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "404": {
                        "description": "Invalid customer id"
                    }
                }
            },
            "delete": {
                "tags": [
                    "teams"
                ],
                "summary": "Delete specific team by id",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "type": "integer",
                        "description": "Id of the team that we want to be delete",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "404": {
                        "description": "Invalid customer id"
                    }
                }
            }
        }
    },
    "definitions": {
        "Team": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                },
                "group": {
                    "type": "string"
                }
            }
        }
    }
}